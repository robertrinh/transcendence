{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:dev": "ts-node src/index.ts",
    "dev": "ts-node src/index.ts",
    "test": "node --loader ts-node/esm --test src/**/*.test.ts",
    "test:watch": "node --loader ts-node/esm --test --watch src/**/*.test.ts",
    "test:integration": "node --loader ts-node/esm --test src/**/*.integration.test.ts",
    "test:ci": "node --loader ts-node/esm --test src/tests/health.test.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "better-sqlite3": "^12.4.1",
    "fastify": "5.5.0"
  },
  "devDependencies": {
    "@tsconfig/node24": "24.0.1",
    "@types/node": "24.3.1",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2"
  }
}
