		"qrcode": "1.5.4",
		"@types/qrcode": "1.5.6",
		"bcrypt": "^6.0.0",
		"better-sqlite3": "^12.4.1",
		"fastify": "5.5.0",
		"jsonwebtoken": "^9.0.2",
	    "@fastify/websocket": "^10.0.1",
