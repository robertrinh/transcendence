# Use Node.js image
FROM node:alpine

# Set working directory
WORKDIR /app

# Copy package.json for npm install
COPY package.json package-lock.json ./

# Install dependencies
RUN npm install

# Copy all frontend files
COPY . .

# Builds the frontend, no server just static files (uncomment for production)
# RUN npm run build

# Expose port 80
EXPOSE 8080

# Start simple HTTP server
CMD ["npm", "run", "dev"]